<?php 
    $_category = Mage::registry('current_category');
    if(isset($_category) && $_category->getId()){
        $_collection = $_category->getProductCollection(); 
    }
    $_helper = $this->helper('catalog/output');
?>
<!--?php if(count($this->getItemCollection()->getItems())): ?-->
<?php if(count($_collection)): ?>
<div class="box-collateral box-up-sell category-products">
    <div class="page-title">
        <h2><i class="fa fa-bullhorn"></i> <?php echo $this->__('You may also be interested in the following product(s)') ?></h2>
    </div>
    <ul class="products-grid">
    <?php $i=0; foreach ($_collection as $_product): $i++; ?>
        <?php $_product = Mage::getModel('catalog/product')->load($_product->getId()); ?>
        <li class="item<?php if(($i-1)%$_columnCount==0): ?> first<?php elseif($i%$_columnCount==0): ?> last<?php endif; ?>">
            <a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->stripTags($this->getImageLabel($_product, 'small_image'), null, true) ?>" class="product-image"><img src="<?php echo $this->helper('catalog/image')->init($_product, 'small_image')->resize(240,240); ?>" alt="<?php echo $this->stripTags($this->getImageLabel($_product, 'small_image'), null, true) ?>" /></a>
            <h2 class="product-name"><a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->stripTags($_product->getName(), null, true) ?>"><?php echo $_helper->productAttribute($_product, $_product->getName(), 'name') ?></a></h2>
            <?php echo $this->getPriceHtml($_product, true) ?>
            <div class="actions">
                <?php if($_product->isSaleable()): ?>
                    <button type="button" title="<?php echo $this->__('Adaugă în coş') ?>" class="button btn-cart" onclick="setLocation('<?php echo $this->getAddToCartUrl($_product) ?>')"><span><span><?php echo $this->__('Adaugă în coş') ?></span><span class="icon"><i class="fa fa-shopping-cart"></i></span></span></button>
                <?php else: ?>
                    <p class="availability out-of-stock"><span><?php echo $this->__('Out of stock') ?></span></p>
                <?php endif; ?>
            </div>
        </li>
        <?php if($i==5) { break; } endforeach; ?>
    </ul>
</div>
<?php endif ?>
